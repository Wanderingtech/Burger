<h1>YUM, BURGERS!</h1>

<div class="row">
  <div class="col s12 m6 l6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Burgers On Order</span>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
        <span class="card-title">Burgers Eaten</span>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-delete devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Add a Burger</span>
        <form class="create-form">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <div class="form-group">
            <label for="devoured">devoured?</label><br>
            <input type="radio" name="devoured" value="0" checked> Order Ready<br>
            <input type="radio" name="devoured" value="1"> Eaten
          </div>
      </div>
      <div class="card-action">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">Add Burger</i>
        </button>
      </div>
      </form>
    </div>
</div>